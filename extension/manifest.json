{
  "manifest_version": 2,

  "name": "VK Player",
  "description": "VK Player",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  
  "background": {"page": "background.html"},
  "permissions": ["tabs", "storage" , "http://*/*", "https://*/*"]
}